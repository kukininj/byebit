<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Wallet Name" />

    <TextView
        android:id="@+id/wallet_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:text="0x1234..." />

    <!-- Add this TextView for the balance -->
    <TextView
        android:id="@+id/wallet_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:text="Balance: 0 ETH"
        android:layout_marginTop="4dp"/>

    <!-- ADD THIS TextView for the balance last updated timestamp -->
    <TextView
        android:id="@+id/wallet_balance_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:text="Last updated: N/A"
        android:layout_marginTop="2dp"/>

    <!-- ADD THIS BUTTON -->
    <Button
        android:id="@+id/button_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_button_text"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"/>

</LinearLayout>
